<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Reports</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6">
    <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-semibold text-center text-gray-700 mb-6">All Reports</h2>

        <% if (reports.length === 0) { %>
            <p class="text-gray-500 text-center">No reports found.</p>
        <% } else { %>
            <div class="space-y-4">
                <% reports.forEach(report => { %>
                    <div class="bg-white p-6 rounded-lg shadow-md  flex-col">
                        <h3 class="text-lg font-semibold text-gray-800"><%= report.booktitle %></h3>
                        <p class="text-gray-600"><strong>Book No:</strong> <%= report.book_no %></p>
                        <p class="text-gray-600"><strong>Description:</strong> <%= report.description %></p>
                <% }) %>
            </div>
        <% } %>
    </div>

    <script>
        function handleOk(reportId) {
            alert("Report ID: " + reportId + " marked as read.");
            location.reload(); // Refresh the page (optional)
        }
    </script>
</body>
</html>
