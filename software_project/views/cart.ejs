<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Final Cart</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col items-center p-6">

    <!-- Header -->
    <header class="text-3xl font-bold text-gray-800 mt-4 tracking-wide bg-white py-5 px-8 rounded-lg shadow-md">
        Library Management System
    </header>

    <!-- Cart Container -->
    <div class="bg-white shadow-lg rounded-xl p-6 mt-8 w-full max-w-4xl border border-gray-200">
        <h2 class="text-2xl font-semibold text-gray-700 mb-5 border-b pb-3">Your Cart</h2>

        <!-- Table -->
        <div class="overflow-x-auto">
            <table class="w-full border border-gray-200 rounded-lg shadow-sm overflow-hidden">
                <thead>
                    <tr class="bg-gray-100 text-gray-700 uppercase text-sm tracking-wide">
                        <th class="border border-gray-200 px-5 py-3 text-left font-medium">Book Title</th>
                        <th class="border border-gray-200 px-5 py-3 text-left font-medium">Author</th>
                        <th class="border border-gray-200 px-5 py-3 text-center font-medium">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    <% cartItems.forEach(e => { %>
                    <tr class="hover:bg-gray-50 transition duration-200">
                        <td class="border border-gray-200 px-5 py-3 text-gray-800 font-medium"><%= e.booktitle %></td>
                        <td class="border border-gray-200 px-5 py-3 text-gray-700"><%= e.author %></td>
                        <td class="border border-gray-200 px-5 py-3 text-center">
                            <a href="/remove/<%= e._id %>" 
                               class="bg-red-500 text-white px-4 py-2 rounded-md shadow-sm hover:bg-red-600 transition duration-300"
                               onclick="return confirm('Are you sure you want to remove this book?')">
                                Remove
                            </a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- Buttons -->
        <div class="flex justify-between items-center mt-6">
            <a href="/student" class="bg-gray-700 text-white px-5 py-2 rounded-md shadow-sm hover:bg-gray-800 transition duration-300">
                Back to Browse
            </a>
            <a href="/student" class="bg-green-600 text-white px-5 py-2 rounded-md shadow-sm hover:bg-green-700 transition duration-300">
                Checkout
            </a>
        </div>
    </div>

    <!-- Footer -->
    <footer class="mt-auto text-gray-500 text-sm mt-6 text-center bg-white py-4 w-full shadow rounded-lg">
        &copy; 2025 Library Management System | All Rights Reserved
    </footer>

</body>
</html>
